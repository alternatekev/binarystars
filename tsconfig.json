{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "outDir": "dist",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@mm": [
        "./"
      ],
      "@components": [
        "./components"
      ],
      "@views": [
        "./views"
      ],
      "@globals": [
        "./globals"
      ],
      "@mocks": [
        "./mocks"
      ],
      "@types": [
        "./types"
      ],
      "@styles": [
        "./styles"
      ],
      "@utils": [
        "./utils"
      ],
      "@data": [
        "./data"
      ]
    },
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "strict": true,
    "typeRoots": [
      "./node_modules/@types/",
      "**/types/**/*.d.ts"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "exclude": [
    "**/node_modules",
    "**/__tests__",
    "**/dist",
    "**/lib"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "index.js"
  ]
}
